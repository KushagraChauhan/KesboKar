<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_cancel_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/rb_businesses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:text="Market Place"
                android:textColor="#FFFFFF"
                android:textSize="30sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="#FFFFFF"
                android:isScrollContainer="true"
                android:scrollbars="horizontal"
                android:paddingStart="15dp"
                android:textColorHint="#C0C0C0"
                android:selectAllOnFocus="true"
                android:hint="Enter Type Or Name"
                android:id="@+id/autoCompleteTextViewOne">
            </androidx.appcompat.widget.AppCompatAutoCompleteTextView>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:id="@+id/autoCompleteTextViewTwo"
                android:paddingStart="15dp"
                android:hint="Suburb Or State"
                android:textColorHint="#C0C0C0"
                android:background="#FFFFFF"
                android:selectAllOnFocus="true" />

            <ImageView
                android:id="@+id/ImgViewLocation"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginTop="150dp"
                android:layout_alignEnd="@+id/autoCompleteTextViewOne"
                android:selectAllOnFocus="true"
                android:src="@drawable/location" />

            <Button
                android:id="@+id/btnAlertDialogSearch"
                style="@style/Animation.Design.BottomSheetDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:text="Search    "
                android:textAllCaps="true" />



            <TextView
                android:id="@+id/txtVisitBusinessPlace"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:text="Visit Business Place"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@color/kesbokar"/>



        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

