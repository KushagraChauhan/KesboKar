<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileMarket"
    tools:showIn="@layout/app_bar_profile_market"
    >

    <Button
        android:id="@+id/btnProductManagement"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Create New"
        android:textColor="@color/White" />

        android:layout_marginTop="5dp"
        android:layout_marginStart="300dp"
        android:text="Create"
        android:background="@color/red"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapTxtSno"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="SNo."
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adapTxtTitle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Product Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adapTxtStatus"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Status"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Actions"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
            <ListView
                android:id="@+id/listProfileMarket"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>