<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Navigation_market"
    tools:showIn="@layout/app_bar_navigation_market">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HELP"
                android:background="@drawable/rect_button"
                android:id="@+id/help"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="INBOX"
                android:background="@drawable/rect_button"
                android:id="@+id/inbox"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BUISNESS"
                android:background="@drawable/rect_button"
                android:id="@+id/buis"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MARKET"
                android:background="@drawable/rect_button"
                android:id="@+id/mar"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TOP"
                android:background="@drawable/rect_button"
                android:id="@+id/top"/>
        </LinearLayout>
        </HorizontalScrollView>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/map" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="34dp"
                android:background="@color/colorTransparent"/>
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_businesses"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/colorTransparent"
                        android:text="Businesses"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/rb_marketplace"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/kesbokar"
                        android:text="Market Place"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </RadioGroup>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="390dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/edit_text_round">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="220dp"
                            android:layout_marginEnd="15dp"
                            android:selectAllOnFocus="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="390dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/edit_text_round">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="160dp"
                            android:layout_marginEnd="15dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:text="Search"
                        style="@style/Animation.Design.BottomSheetDialog"
                        android:textAllCaps="true"
                        android:background="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_search_black_24dp"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="220dp"

                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="250dp"
                    android:text="Market Place"
                    android:textColor="#FFA000"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:id="@+id/category"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category1"
                        android:layout_marginTop="285dp">

                        <LinearLayout
                            android:id="@+id/abc1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:orientation="horizontal"></LinearLayout>
                    </RelativeLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="80dp">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="400dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="FEATURED ADS"
                            android:textSize="25dp"
                            android:gravity="center_horizontal"
                            android:textColor="#FFA000"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/mi1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Market Place Name"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:id="@+id/mc1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Small Description"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/md1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/mi2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Market Place Name"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:foregroundGravity="center_horizontal"
                                android:id="@+id/mc2"
                                android:textSize="18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Small Description"
                                android:gravity="center_horizontal"
                                android:foregroundGravity="center_horizontal"
                                android:id="@+id/md2"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/mi3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Market Place Name"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:id="@+id/mc3"
                                android:textSize="18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Small Description"
                                android:id="@+id/md3"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="YOUR SERVICE EXPERT"
                                android:textSize="25dp"
                                android:gravity="center_horizontal"
                                android:textColor="#FFA000"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="We provide only verified, background checked and high quality professional"
                                android:textSize="15dp"
                                android:id="@+id/about"
                                android:gravity="center_horizontal"
                                android:textColor="#000000"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="80dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="15dp">

                                    <ImageView
                                        android:id="@+id/bi1"
                                        android:layout_width="300dp"
                                        android:layout_height="150dp"
                                        android:foregroundGravity="center_horizontal"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center_horizontal"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Company Name"
                                        android:id="@+id/bc1"
                                        android:layout_gravity="center_horizontal"
                                        android:textStyle="bold"
                                        android:textSize="18dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/bd1"
                                        android:text="Small Description"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="15dp">

                                    <ImageView
                                        android:id="@+id/bi2"
                                        android:layout_width="300dp"
                                        android:layout_height="150dp"
                                        android:foregroundGravity="center_horizontal"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center_horizontal"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Company Name"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/bc2"
                                        android:textStyle="bold"
                                        android:textSize="18dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Small Description"
                                        android:id="@+id/bd2"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="15dp">

                                    <ImageView
                                        android:id="@+id/bi3"
                                        android:layout_width="300dp"
                                        android:layout_height="150dp"
                                        android:foregroundGravity="center_horizontal"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center_horizontal"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Company Name"
                                        android:id="@+id/bc3"
                                        android:layout_gravity="center_horizontal"
                                        android:textStyle="bold"
                                        android:textSize="18dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/bd3"
                                        android:text="Small Description"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="15dp">

                                    <ImageView
                                        android:id="@+id/bi4"
                                        android:layout_width="300dp"
                                        android:layout_height="150dp"
                                        android:foregroundGravity="center_horizontal"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center_horizontal" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Company Name"
                                        android:id="@+id/bc4"
                                        android:layout_gravity="center_horizontal"
                                        android:textStyle="bold"
                                        android:textSize="18dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Small Description"
                                        android:id="@+id/bd4"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal"/>
                                </LinearLayout>

                            </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>